<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bojie.materialtest" >

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Always required on api < 21, needed to keep a wake lock while your job is running -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Required on api < 21 if you are using setRequiredNetworkType(int) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Required on all api levels if you are using setPersisted(true) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".material.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityWithSlidingTabLayout"
            android:label="@string/action_tab_using_SlidingTabLayout"
            android:parentActivityName=".activities.MainActivity" >
        </activity>
        <activity
            android:name=".activities.SubActivity"
            android:label="@string/title_activity_sub"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.VectorTestActivity"
            android:label="@string/title_activity_vector_test" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>

        <service
            android:name=".services.MyService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name=".activities.RecyclerAnimatorsActivity"
            android:label="@string/title_activity_recycler_animators" >
        </activity>
        <activity
            android:name=".activities.ActivityA"
            android:label="Calling" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ActivityB"
            android:label="@string/title_activity_activity_b"
            android:parentActivityName=".activities.ActivityA" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bojie.materialtest.activities.ActivityA" />
        </activity>
    </application>

</manifest>
